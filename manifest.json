{
  "manifest_version": 3,
  "name": "후니의 잡동사니",
  "version": "1.2.0",
  "description": "혼자 쓰려고 만든 도구 모음",
  "action": {
    "default_popup": "views/popup/popup.html"
  },
  "options_ui": {
    "page": "views/settings/settings.html",
    "open_in_tab": true
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "features/ad-blocker/content.js",
        "features/code-review/content.js"
      ]
    }
  ]
}
